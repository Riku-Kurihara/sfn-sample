{
  "Comment": "Evidence Label Processing Workflow",
  "StartAt": "ProcessEvidenceLabel",
  "States": {
    "ProcessHelloWorld": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${HelloWorldFunctionArn}",
        "Payload.$": "$"
      },
      "TimeoutSeconds": 60,
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 5,
          "MaxAttempts": 5,
          "BackoffRate": 2.0
        }
      ],
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "Next": "HandleError"
        }
      ],
      "End": true
    },
    "HandleError": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${HelloWorldFunctionArn}",
        "Payload.$": "$"
      },
      "End": true
    }
  }
}
